{
  "extends": "astro/tsconfigs/base",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "archive_src/config.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": false,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "plugins": [
      {
        "name": "@astrojs/tsplugin"
      }
    ],
    "paths": {
      "@basics/*": [
        "./src/components/basics/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@visuals/*": [
        "./src/assets/visuals/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ],
      "@changelog--code/*": [
        "../content/changelog--code/*"
      ],
      "@changelog--content/*": [
        "../content/changelog--content/*"
      ],
      "@lossless-content/*": [
        "../content/*"
      ],
      "@tabler/*": [
        "./node_modules/@tabler/icons/*"
      ]
    },
    "types": ["astro/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "astro"
  }
}
