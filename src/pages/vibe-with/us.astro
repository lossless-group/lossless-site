---
/**
 * /vibe-with/us
 *
 * Base page rendering a grid of feature/app cards using IconHeaderMessageCardGrid.
 * Uses the site-wide Layout.astro wrapper for consistency.
 *
 * Aggressive block comments clarify structure and intent.
 */
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import IconHeaderMessageOvalProcess from "@components/basics/messages/IconHeaderMessageOvalProcess.astro";
import Einstein from "@assets/visuals/imageOf/imageOf__Albert-Einstein.png";

// Define frontmatter data for the vibe with us page
const frontmatter = {
  title: "Vibe Code with Us",
  description: "We've been down the rabbit holes, shaved our yaks, and present our tender, love, care, and the results of untold frustration for you here.",
  lede: "We've been down the rabbit holes, shaved our yaks, and present our tender, love, care, and the results of untold frustration for you here."
};
---

<!--
  /vibe-with/us
  Page for showcasing featured coding tools or messages in a grid layout.
  Wrapped in Layout.astro for site-wide navigation, SEO, and styling.
-->
<Layout frontmatter={frontmatter}>

  <section class="think-harder">
    <div class="think-harder-container">
      <div class="image-left think-harder-image">
        <Image
          src={Einstein}
          alt="Image of Albert Einstein thinking"
          class="clamp-40%"
        />
      </div>
      <div class="think-harder-copy">
        <h1>The Resurgence of Old School</h1>
        <p>Back to the future, back to the roots, back to the basics.</p>
        <p>The Hacker era will be left in the dust.</p>
      </div>
    </div>
  </section>
  <!-- Inline, page-specific Hero for /vibe-with/us.astro -->
  <section class="hero vibe-hero--local">
    <div class="hero-content">
      <div class="hero-text">
        <p class="hero-subtitle">Our Systems have come a long way.</p>
        <h1 class="hero-title">Vibe Code with Us</h1>
        <p class="hero-description">
          We've been down the rabbit holes, shaved our yaks, and present our tender, love, care, and the results of untold frustration for you here.</p>
      </div>
    </div>
  </section>

  <section class="vibe-with-us-section" style="--vibe-section-top-margin: 2.5rem;">
    <div class="vibe-container">
       <IconHeaderMessageOvalProcess 
          jsonPath="messages/vibeCodingIconHeaderMessages.json"
          style="margin: 0 auto;"
       />
    </div>
 </section>
</Layout>

<style>

.think-harder {
  padding: 4rem 4rem 1rem 4rem;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.think-harder-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 4rem;
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  
  @media (max-width: 860px) {
    flex-direction: column;
    text-align: center;
    gap: 2rem;
    
    .think-harder-image,
    .think-harder-copy {
      max-width: 100%;
      width: 100%;
    }
  }
}
.think-harder-image {
  max-width: 40%;
}
.think-harder-copy {
  max-width: 50%;
  & h1 {
    font-size: var(--fs-800);
    font-family: var(--ff-base);
    font-weight: var(--fw-bold);
    color: var(--clr-heading);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  & p {
    font-family: var(--ff-legible);
    font-weight: var(--fw-regular);
    font-size: var(--fs-450);
    line-height: 1.6;
    opacity: 0.9;
    max-width: 60ch;
    margin-bottom: 0;
    margin-left: auto;
    margin-right: auto;
  }
}
.vibe-with-us-section {
      padding: 3rem 1.5rem;
      width: 100%;
      background: var(--clr-bg-secondary, #1a1e26);
      margin-top: var(--vibe-section-top-margin, 2.5rem);
   }

/* Page-local Hero styles for /vibe-with/us.astro */
.hero.vibe-hero--local {
  margin-bottom: 0;
  margin-top: 0.25rem;
  padding: 2.5rem 1.5rem;
  border-radius: 1rem;
  background: var(--clr-primary-bg);
  box-shadow: 0 4px 24px rgba(0,0,0,0.1);
  border: 1px solid rgba(255,255,255,0.05);
}
.hero.vibe-hero--local .hero-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  max-width: 900px;
  margin: 0 auto;
}
.hero.vibe-hero--local .hero-text {
  text-align: center;
}
.hero.vibe-hero--local .hero-subtitle {
  font-family: var(--ff-legible);
  font-weight: var(--fw-semi-bold);
  font-size: var(--fs-400);
  color: var(--clr-lossless-accent--brightest);
  margin-bottom: 0.5rem;
  letter-spacing: 0.5px;
}
.hero.vibe-hero--local .hero-title {
  font-family: var(--ff-base);
  font-weight: var(--fw-bold);
  font-size: var(--fs-900);
  line-height: 1.2;
  margin-bottom: 1rem;
  background: linear-gradient(90deg, var(--clr-lossless-primary-light) 0%, var(--clr-lossless-accent--brightest) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
}
.hero.vibe-hero--local .hero-description {
  font-family: var(--ff-legible);
  font-weight: var(--fw-regular);
  font-size: var(--fs-450);
  line-height: 1.6;
  opacity: 0.9;
  max-width: 60ch;
  margin-bottom: 0;
  margin-left: auto;
  margin-right: auto;
}
</style>