  text-align: center;
  max-width: 600px;
  margin: 4rem auto;
  padding: 2rem;
  background: var(--clr-surface-secondary, #f8f9fa);
  border-radius: 1rem;
  border: 1px solid var(--clr-border-subtle, #e1e5e9);
}

