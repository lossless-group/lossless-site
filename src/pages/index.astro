---
import Layout from "@layouts/Layout.astro";
import SingleColumnSectionScroll from "@layouts/SingleColumnSectionScroll.astro";
import Hero from "@components/basics/Hero.astro";
import AnimationWrapper from "@components/basics/AnimationWrapper.astro";

// Define frontmatter data for the homepage
const frontmatter = {
  title: "Go Lossless: Innovate and Collaborate",
  description: "With the right tools, mindset, process, and culture, any organization can upskill everyone for the era of AI",
  lede: "We bring the right tools, mindset, process, and culture to any organization, so that the whole organization can benefit and everyone can upskill for the era of AI",
  banner_image: "/visuals/Convey__Picto__Assembly-Line.svg"
};
---

<Layout frontmatter={frontmatter}>
  <AnimationWrapper>
    <Hero
      title="Everyone can Win in the Age of AI"
      subtitle="Don't worry about losing out."
      description="Let's develop the right tools, mindset, process, and culture so that everyone can upskill, and the whole organization can benefit from the Era of AI"
      ctaText="Explore the AI Toolkit"
      ctaUrl="/ai-toolkit"
      image={{
        src: "/visuals/Convey__Picto__Assembly-Line.svg",
        alt: "Assembly line illustration"
      }}
      alignment="left"
      fullBleed={true}
      animate={true}
      class="mb-0"
      style="margin-bottom: 0;"
      innerStyle="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; margin-top: 10rem;"
    />
  </AnimationWrapper>
  <SingleColumnSectionScroll />
</Layout>
