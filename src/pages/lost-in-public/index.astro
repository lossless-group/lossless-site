---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/basics/Hero.astro";
import AnimationWrapper from "@components/basics/AnimationWrapper.astro";
import IconHeaderMessageCardGrid from "@components/basics/messages/IconHeaderMessageCardGrid.astro";

// Define frontmatter data for the lost-in-public page
const frontmatter = {
  title: "Lost in Public: Learning and Building in the Open",
  description: "Explore our collection of insights, tools, and resources shared openly as we learn and build together",
  lede: "Seven collections of content documenting our journey of learning, building, and sharing knowledge in public",
  banner_image: "/visuals/Convey__Picto__Assembly-Line.svg"
};

// Define the seven lost-in-public collections with their descriptions and icons
const collections = [
  {
    title: "Up and Running",
    description: "Step by step instructions to get up and running with Lossless toolkit libraries.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M8 5v14l11-7z" fill="currentColor"/>
      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
    </svg>`,
    to_path: "/learn-with/up-and-running",
    badge: "Guides"
  },
  {
    title: "Issue Resolution", 
    description: "Find solutions to common problems and issues.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
    </svg>`,
    to_path: "/learn-with/issue-resolution",
    badge: "Solutions"
  },
  {
    title: "Talks",
    description: "Watch and learn from our collection of talks and presentations.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/>
    </svg>`,
    to_path: "/learn-with/our-talks",
    badge: "Presentations"
  },
  {
    title: "Market Maps",
    description: "Explore the landscape with our comprehensive market maps.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2" fill="none"/>
      <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
    </svg>`,
    to_path: "/market-map/it",
    badge: "Analysis"
  },
  {
    title: "Explorations",
    description: "Explore our collection of explorations.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" fill="none"/>
      <path d="m21 21-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    to_path: "/learn-with/explorations",
    badge: "Discovery"
  },
  {
    title: "Zero to...",
    description: "See us fumble with things we supposedly know.",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    to_path: "/learn-with/zero-to",
    badge: "Learning"
  },
  {
    title: "Vibe with Us",
    description: "Dive into our vibe coding context engineering playbook",
    icon: `<svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" fill="currentColor"/>
    </svg>`,
    to_path: "/vibe-with/us",
    badge: "Community"
  }
];

// Create a temporary JSON file content for the IconHeaderMessageCardGrid
const cardsData = collections;
---

<Layout frontmatter={frontmatter}>
  <AnimationWrapper>
    <Hero
      title="Lost in Public"
      subtitle="Learning and Building in the Open"
      description="Seven collections of insights, tools, and resources documenting our journey of continuous learning and open collaboration"
      ctaText="Explore Collections"
      ctaUrl="#collections"
      image={{
        src: "/visuals/Convey__Picto__Assembly-Line.svg",
        alt: "Assembly line illustration representing systematic learning"
      }}
      alignment="center"
      fullBleed={true}
      animate={true}
      classes="mb-8"
      style="margin-bottom: 2rem;"
    />
  </AnimationWrapper>

  <section id="collections" class="collections-section">
    <div class="collections-container">
      <div class="collections-grid">
        {collections.map(collection => (
          <div class="collection-card">
            <a href={collection.to_path} class="collection-link">
              <div class="collection-icon">
                <span set:html={collection.icon} />
              </div>
              <div class="collection-content">
                <div class="collection-header">
                  <h3 class="collection-title">{collection.title}</h3>
                  {collection.badge && (
                    <span class="collection-badge">{collection.badge}</span>
                  )}
                </div>
                <p class="collection-description">{collection.description}</p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .collections-section {
    padding: 4rem 0;
    background: var(--clr-primary-bg);
  }

  .collections-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .collection-card {
    background: color-mix(
      in oklab,
      var(--clr-lossless-primary-glass),
      var(--clr-lossless-primary-dark) 95%
    );
    border: 1px solid var(--clr-lossless-ui-btn-border);
    border-radius: 1rem;
    padding: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    height: 100%;
  }

  .collection-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border-color: var(--clr-lossless-accent--brightest);
  }

  .collection-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    gap: 1.5rem;
  }

  .collection-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: color-mix(
      in oklab,
      var(--clr-lossless-primary-light),
      transparent 85%
    );
    border-radius: 1rem;
    color: var(--clr-lossless-accent--brightest);
    flex-shrink: 0;
  }

  .collection-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .collection-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .collection-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--clr-lossless-primary-light);
    margin: 0;
    line-height: 1.3;
  }

  .collection-badge {
    background: var(--clr-lossless-accent--brightest);
    color: var(--clr-lossless-primary-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    flex-shrink: 0;
  }

  .collection-description {
    color: var(--clr-body);
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .collections-section {
      padding: 2rem 0;
    }

    .collections-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .collection-link {
      padding: 1.5rem;
      gap: 1rem;
    }

    .collection-icon {
      width: 64px;
      height: 64px;
    }

    .collection-title {
      font-size: 1.25rem;
    }

    .collection-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .collections-container {
      padding: 0 1rem;
    }

    .collection-link {
      padding: 1.25rem;
    }
  }
</style>