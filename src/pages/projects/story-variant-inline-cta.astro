---
import StoryInlineCTA from "@components/projects/project-section-layouts/StoryInlineCTA.astro";
import Layout from "@layouts/Layout.astro";

const steps = [
  { title: "Connect Data Source", href: "/projects/Augment-It/connect", excerpt: "Link your warehouse or upload CSVs." },
  { title: "Review & Enrich Records", href: "/projects/Augment-It/review", excerpt: "Compute synthetic fields and validate data." },
  { title: "Design Prompt Templates", href: "/projects/Augment-It/templates", excerpt: "Create reusable prompts with variables." },
  { title: "Assemble Insights", href: "/projects/Augment-It/insights", excerpt: "Summarize and package findings." },
  { title: "Sync Back to Source", href: "/projects/Augment-It/sync", excerpt: "Round-trip results to systems of record." },
];
---
<Layout title="Inline CTA Journey" description="Each step appears as a card with a clear 'Continue' action.">
      <section class="max-w-5xl mx-auto px-4 py-8" aria-labelledby="page-title">
        <div class="mb-6">
          <h1 id="page-title" class="text-3xl font-semibold" style="color: var(--clr-heading)">Inline CTA Journey</h1>
          <p class="text-sm mt-2 opacity-80" style="color: var(--clr-body)">
            Each step appears as a card with a clear "Continue" action.
          </p>
        </div>
      </section>

      <StoryInlineCTA heading="Augment-It" subheading="A step-by-step user journey" {steps} />
</Layout>
