---
import Layout from '@layouts/Layout.astro';
import OneArticle from '@layouts/OneArticle.astro';
import OneArticleOnPage from '@components/articles/OneArticleOnPage.astro';
import md from '@generated/projects/Augment-It/Specs/apps-microfrontends/RequestReviewer.md?raw';

const title = 'Review Request & Response — RequestReviewer';
const data = {
  path: Astro.url.pathname,
  id: 'Augment-It/Specs/apps-microfrontends/RequestReviewer.md'
};
---

