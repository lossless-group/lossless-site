---
import StorySidebarTree from "@components/projects/project-sections/StorySidebarTree.astro";
import Layout from "@layouts/Layout.astro";

const breadcrumb = [
  { label: "Projects", href: "/projects" },
  { label: "Augment-It", href: "/projects/Augment-It" },
  { label: "Review & Enrich Records" },
];

const nodes = [
  {
    title: "Connect Data Source",
    href: "/projects/Augment-It/connect",
    children: [
      { title: "Supported Data Stores", href: "/projects/Augment-It/connect/supported-stores" },
    ],
  },
  {
    title: "Review & Enrich Records",
    href: "/projects/Augment-It/review",
    children: [
      { title: "RecordCollector", href: "/projects/Augment-It/review/record-collector" },
    ],
  },
  {
    title: "Design Prompt Templates",
    href: "/projects/Augment-It/templates",
  },
  {
    title: "Assemble Insights",
    href: "/projects/Augment-It/insights",
  },
  {
    title: "Sync Back to Source",
    href: "/projects/Augment-It/sync",
  },
];

const currentHref = "/projects/Augment-It/review";
---


  <Layout title="Sidebar Tree Journey" description="Each step appears as a card with a clear 'Continue' action.">
    <section class="max-w-5xl mx-auto px-4 py-8" aria-labelledby="page-title">
      <div class="mb-6">
        <h1 id="page-title" class="text-3xl font-semibold" style="color: var(--clr-heading)">Sidebar Tree Journey</h1>
        <p class="text-sm mt-2 opacity-80" style="color: var(--clr-body)">
          Each step appears as a card with a clear "Continue" action.
        </p>
      </div>
    </section>

    <StorySidebarTree {breadcrumb} {nodes} {currentHref}>
      <article class="prose" style="color: var(--clr-body)">
        <h1>Review & Enrich Records</h1>
        <p>
          This section demonstrates a hierarchical navigation tree with a breadcrumb header.
          Use it to signal parent/child structure across markdown content.
      </p>
    </article>
  </StorySidebarTree>
  </Layout>
