---
import StoryStickyFooterNav from "@components/projects/project-sections/StoryStickyFooterNav.astro";
import Layout from "@layouts/Layout.astro";

const steps = [
  { title: "Connect Data Source", href: "/projects/Augment-It/connect" },
  { title: "Review & Enrich Records", href: "/projects/Augment-It/review" },
  { title: "Design Prompt Templates", href: "/projects/Augment-It/templates" },
  { title: "Assemble Insights", href: "/projects/Augment-It/insights" },
  { title: "Sync Back to Source", href: "/projects/Augment-It/sync" },
];

const currentIndex = 1; // demo: second step active
---

<Layout title="Story Variant â€” Sticky Footer" description="Linear journey with sticky footer navigation">
  <section class="max-w-5xl mx-auto px-4 py-8" aria-labelledby="page-title">
    <h1 id="page-title" class="text-3xl font-semibold mb-2" style="color: var(--clr-heading)">Sticky Footer Navigation</h1>
    <p class="opacity-80 mb-6" style="color: var(--clr-body)">
      Demo of a linear journey with a sticky footer showing Next/Prev and progress.
    </p>

    <article class="prose" style="color: var(--clr-body)">
      <h2>Step Content</h2>
      <p>
        This area represents the content of the active step. Use this to render the
        first heading and paragraph from the target MDX file.
      </p>
    </article>
  </section>

  <StoryStickyFooterNav seriesTitle="Augment-It" {steps} {currentIndex} />
</Layout>
