---
import Layout from '@layouts/Layout.astro';

const attemptedPath = Astro.url.searchParams.get('path') || '/unknown';
---

<Layout>
  <div class="not-found-wrapper">
    <h1>404 – Not Found</h1>
    <p>
      We couldn’t find <code>{attemptedPath}</code> in any known directory.
    </p>
    <p>
      Double-check the spelling or <a href="/">return to the homepage</a>.
    </p>
  </div>

  <style>
    .not-found-wrapper {
      max-width: 60ch;
      margin: 4rem auto;
      padding: 2rem;
      text-align: center;
    }

    .not-found-wrapper h1 {
      font-size: 2.5rem;
      color: var(--clr-lossless-accent--brightest);
      margin-bottom: 1.5rem;
    }

    .not-found-wrapper p {
      font-size: 1.1rem;
      color: var(--clr-lossless-primary-light);
      margin-bottom: 1rem;
    }

    .not-found-wrapper code {
      background-color: rgba(255, 255, 255, 0.05);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-family: monospace;
    }

    .not-found-wrapper a {
      color: var(--clr-lossless-accent--brightest);
      text-decoration: underline;
    }
  </style>
</Layout>
