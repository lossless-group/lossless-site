---
import Layout from "@layouts/Layout.astro";
import ArticlesLayout from "@layouts/Articles.astro";
import ArticleGrid from "@components/articles/ArticleGrid.astro";
---

<Layout>
<ArticlesLayout
  title="Notes from the near future"
  description="A collection of articles and resources about the future of software development."
>
<ArticleGrid posts={posts} />
</ArticlesLayout>
</Layout>

<style>
  body {
    background-color: var(--clr-primary-bg);
  }
  h1 {
    font-family: "Poppins", sans-serif;
    color: var(--clr-lossless-primary-light);
  }
  p {
    color: var(--clr-lossless-primary-light);
    font-family: "", sans-serif;
  }
</style>