---
import Layout from '@layouts/Layout.astro';
import { getCollection } from 'astro:content';
import CollectionReaderLayout from '@layouts/CollectionReaderLayout.astro';

// Fetch all entries from the 'essays' collection
const essays = await getCollection('essays');

// Sort essays if needed (e.g., by date) - assuming default sort for now
// Example: essays.sort((a, b) => b.data.date_created.valueOf() - a.data.date_created.valueOf());

---
<Layout title="The Lossless Reader: Essays">
   <CollectionReaderLayout essays={essays} />
</Layout>