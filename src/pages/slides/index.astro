---
/**
 * Slides Index Page
 * Lists all available presentations
 */
import Layout from '@layouts/Layout.astro';
import TextCTA from '@components/basics/cta/TextCTA.astro';

const title = "Presentations";
const description = "Browse available slide presentations";

const frontmatter = {
  title: title,
  description: description,
  lede: description
};

// Define available presentations
const presentations = [
  {
    title: "Introduction to RevealJS",
    description: "Learn how RevealJS works with Astro",
    url: "/slides/reveal-intro",
    icon: "ðŸŽ¯"
  },
  {
    title: "Astro Basics",
    description: "Learn the fundamentals of the Astro web framework",
    url: "/slides/astro-basics",
    icon: "ðŸš€"
  },
  {
    title: "Web Performance Optimization",
    description: "Essential techniques for building lightning-fast websites",
    url: "/slides/web-performance",
    icon: "âš¡"
  },
  {
    title: "Modern CSS Features",
    description: "Exploring the latest and most powerful CSS capabilities",
    url: "/slides/modern-css",
    icon: "ðŸŽ¨"
  }
];
---

<Layout frontmatter={frontmatter}>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">{title}</h1>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
      {presentations.map(presentation => (
        <div class="presentation-card block p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 transform">
          <div class="text-4xl mb-4">{presentation.icon}</div>
          <h2 class="text-xl font-semibold mb-2">{presentation.title}</h2>
          <p class="opacity-80">{presentation.description}</p>
          <div class="mt-4">
            <TextCTA href={presentation.url} text="View Presentation" />
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="help-text">
        All presentations support keyboard navigation, speaker notes, and PDF export.
      </p>
      <p class="help-text mt-2">
        Press <kbd class="keyboard-hint">F</kbd> for fullscreen, 
        <kbd class="keyboard-hint">S</kbd> for speaker notes, 
        or <kbd class="keyboard-hint">ESC</kbd> for overview.
      </p>
    </div>
  </div>
</Layout>

<style>
  .presentation-card {
    background-color: var(--clr-secondary-bg, #1a1a1a);
    border: 1px solid var(--clr-border, #333);
    color: var(--clr-text, #e0e0e0);
  }
  
  .presentation-card:hover {
    background-color: var(--clr-hover-bg, #252525);
    border-color: var(--clr-primary, #0078ff);
  }
  
  /* Fallback for light mode if CSS variables aren't available */
  @media (prefers-color-scheme: light) {
    .presentation-card {
      background-color: #f8f9fa;
      border-color: #dee2e6;
      color: #212529;
    }
    
    .presentation-card:hover {
      background-color: #e9ecef;
    }
  }
  
  /* Help text styling */
  .help-text {
    color: var(--clr-text-muted, #999);
    opacity: 0.9;
  }
  
  /* Keyboard hint styling */
  .keyboard-hint {
    padding: 0.25rem 0.5rem;
    background-color: var(--clr-secondary-bg, #2a2a2a);
    border: 1px solid var(--clr-border, #444);
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.875em;
    color: var(--clr-text, #e0e0e0);
    display: inline-block;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  
  /* Light mode fallback for keyboard hints */
  @media (prefers-color-scheme: light) {
    .help-text {
      color: #6c757d;
    }
    
    .keyboard-hint {
      background-color: #e9ecef;
      border-color: #ced4da;
      color: #495057;
    }
  }
</style>