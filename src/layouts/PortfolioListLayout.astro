---
import Layout from '@layouts/Layout.astro';
import OneArticle from '@layouts/OneArticle.astro';
import OneArticleOnPage from '@components/articles/OneArticleOnPage.astro';
import PortfolioCard from '@components/tool-components/PortfolioCard.astro';

interface PortfolioData {
  title?: string;
  og_title?: string;
  description?: string;
  og_description?: string;
  image?: string;
  og_image?: string;
  og_image_url?: string;
  og_screenshot_url?: string;
  url?: string;
  slug?: string;
  zinger?: string;
  tags?: string[];
  site_name?: string;
  [key: string]: any; // Allow additional properties
}

interface Portfolio {
  data: PortfolioData;
  id: string;
  slug: string;
  entry?: any;
  [key: string]: any; // Allow additional properties
}

interface ListEntry {
  id: string;
  body: any;
  data: {
    title?: string;
    slug?: string;
    [key: string]: any;
  };
}

interface Props {
  title: string;
  frontmatter: any;
  listEntry: ListEntry;
  portfolios: Portfolio[];
  includeToC?: boolean; // Optional parameter to include/exclude Table of Contents (default: true)
  includeInfoSidebar?: boolean; // Optional parameter to include/exclude Info Sidebar (default: true)
}

const { title, frontmatter, listEntry, portfolios, includeToC = true, includeInfoSidebar = true } = Astro.props;

// Use all portfolios with PortfolioCard since all companies will have images

const contentData = {
  path: Astro.url.pathname,
  id: listEntry.id.replace(/\\/g, '/').split('/').pop()?.replace(/\.md$/, ''),
  title: listEntry.data.title || title,
  ...listEntry.data,
  date_created: listEntry.data.date_created || new Date().toISOString(),
  date_modified: listEntry.data.date_modified || new Date().toISOString()
};
---

<Layout title={title} frontmatter={frontmatter}>
  <div class="portfolio-list-layout">
    <!-- Main content area for List.md (3/4 width) -->
    <div class="portfolio-narrative">
      <OneArticle
        Component={OneArticleOnPage}
        content={listEntry.body}
        markdownFile={listEntry.id}
        data={contentData}
        title={listEntry.data.title || title}
        includeToC={includeToC}
        includeInfoSidebar={includeInfoSidebar}
      />
    </div>
    
    <!-- Right sidebar with portfolio cards (1/4 width) -->
    <div class="portfolio-sidebar">
      <div class="sidebar-header">
        <h3>Portfolio Companies</h3>
      </div>
      
      <div class="portfolio-companies">
        {portfolios.map((portfolio) => (
            <PortfolioCard
              title={portfolio.og_title || portfolio.title || portfolio.site_name || 'Untitled'}
              description={portfolio.og_description || portfolio.description || ''}
              image={portfolio.og_image || portfolio.image || portfolio.og_image_url || portfolio.og_screenshot_url}
              url={portfolio.url || ''}
              tags={portfolio.tags || []}
              id={portfolio.id}
              site_name={portfolio.site_name}
              class="sidebar-portfolio-card"
            />
        ))}
        
        {portfolios.length === 0 && (
          <p class="no-portfolios">No portfolio companies found.</p>
        )}
      </div>
    </div>
  </div>
</Layout>

<style>
  .portfolio-list-layout {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 0;
    max-width: 96%;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
    align-items: start;
  }

  .portfolio-narrative {
    /* Main content area styling - 2/3 width with reduced horizontal padding */
    padding: 1rem 1rem 2rem 1rem;
    height: fit-content;
    min-height: 60vh;
  }

  .portfolio-sidebar {
    padding: 2rem 1.5rem 0 0;
    box-shadow: var(--shadow-sm);
    height: fit-content;
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }

  .sidebar-header {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--clr-border);
  }

  .sidebar-header h3 {
    font-size: var(--fs-500);
    font-weight: var(--fw-bold);
    color: var(--clr-heading);
    margin-bottom: 0.5rem;
  }

  .sidebar-description {
    font-size: var(--fs-300);
    color: var(--clr-body-muted);
    margin: 0;
  }

  .portfolio-companies {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-portfolio-card {
    width: 100%;
    /* Ensure cards fit in the sidebar */
    max-width: none;
  }

  .no-portfolios {
    text-align: center;
    color: var(--clr-body-muted);
    font-style: italic;
    padding: 2rem 1rem;
  }

  /* Responsive design */
  @media (max-width: 1200px) {
    .portfolio-list-layout {
      grid-template-columns: 2fr 1fr;
      gap: 0;
    }
    
    .portfolio-narrative {
      padding: .5rem 1.5rem;
    }
  }

  @media (max-width: 968px) {
    .portfolio-list-layout {
      grid-template-columns: 1fr;
      gap: 0;
    }
    
    .portfolio-narrative {
      padding: .5rem 1.5rem 1.5rem 0;
      order: 0; /* Ensure narrative content comes first on mobile */
    }
    
    .portfolio-sidebar {
      position: static;
      max-height: none;
      order: 1; /* Show sidebar below content on mobile */
    }
    
    .portfolio-companies {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .portfolio-list-layout {      padding: 1rem 0.5rem;
      gap: 0;
    }
    
    .portfolio-narrative {
      padding: 1.5rem 1rem;
    }
    
    .portfolio-sidebar {
      padding: 1.5rem;
    }
    
    .portfolio-companies {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .portfolio-narrative {
      padding: 1rem 1.5rem;
    }
    
    .portfolio-sidebar {
      padding: 1rem;
    }
  }

  /* Custom scrollbar for sidebar */
  .portfolio-sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .portfolio-sidebar::-webkit-scrollbar-track {
    background: var(--clr-surface-variant);
    border-radius: 3px;
  }

  .portfolio-sidebar::-webkit-scrollbar-thumb {
    background: var(--clr-border);
    border-radius: 3px;
  }

  .portfolio-sidebar::-webkit-scrollbar-thumb:hover {
    background: var(--clr-primary);
  }
</style>