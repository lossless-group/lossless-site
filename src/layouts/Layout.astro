---
import Header from "@basics/Header.astro";
import Footer from "@basics/Footer.astro";
import "@styles/global.css";
import "@styles/starwind.css";
import "@styles/callouts.css";
import "@styles/codeblocks.css";
import SimpleCodeBlock from "@components/codeblocks/SimpleCodeBlock.astro";

interface Props {
  title?: string;
}

const { title = "Go Lossless: Innovate and Collaborate" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <SimpleCodeBlock />
  </body>
</html>

<style>
  body {
    background-color: var(--clr-primary-bg);
  }
  h1 {
    font-family: "Poppins", sans-serif;
    color: var(--clr-lossless-primary-light);
  }
</style>
