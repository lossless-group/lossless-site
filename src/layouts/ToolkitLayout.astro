---
import "@styles/global.css";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
import CardGrid from "@basics/CardGrid.astro";
import TagColumn from "@components/tool-components/TagColumn.astro";
import TagShareHeader from "@components/toolkit/TagShareHeader.astro";

// Props
export interface Props {
  title?: string;
  description?: string;
  filterTag?: string;
  image?: string;
}

const { title = "Toolkit", description = "A curated collection of tools", image, filterTag } = Astro.props;


const toolEntries = await getCollection("tooling");
const tools = toolEntries.map(entry => ({ ...entry.data, id: entry.id }));

tools.forEach(tool => {
  if (!tool.id) throw new Error("Missing tool.id in toolkit layout");
});

---

<Layout 
  title={title} 
  description={description}
  frontmatter={{
    title: title,
    description: description,
    banner_image: image
  }}>
  <main>
    <slot name="header" />
    <div class="toolkit-layout">
      <aside class="sidebar">
        <TagColumn tools={tools} />
      </aside>
      <section class="main-content">
        <TagShareHeader selectedTags={(() => {
          const selectedTags = filterTag ? [filterTag] : [];
          console.log('🔍 ToolkitLayout DEBUG - Passing selectedTags to TagShareHeader:', {
            filterTag,
            selectedTags,
            toolsLength: tools.length
          });
          return selectedTags;
        })()} totalCount={tools.length} filterTag={filterTag} />
        <CardGrid tools={tools} filterTag={filterTag} />
      </section>
    </div>
  </main>
</Layout>

<style>
  .toolkit-layout {
    display: flex;
    flex-direction: row;
    gap: 2rem;
    padding: 2rem;
    width: 100%;
  }

  .sidebar {
    width: 250px;
    flex-shrink: 0;
  }

  .main-content {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 768px) {
    .toolkit-layout {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
    }
  }
</style>
