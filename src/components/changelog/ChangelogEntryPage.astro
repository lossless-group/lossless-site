---
import { formatDate } from "@utils/formatDate";
import { processInlineContent, processContent } from "@utils/processContent";
import MarkdownContent from "@components/articles/MarkdownContent.astro";

interface Props {
  entry: {
    title?: string;
    date?: Date | string;
    category?: string;
    contextSetter?: string;
    fileName?: string;
    content?: string;  
    [key: string]: any;
  }
}

const { entry } = Astro.props;
const {
  title,
  date,
  category,
  contextSetter,
  content
} = entry;

// Format the date if it exists
const formattedDate = date ? formatDate(new Date(date)) : '';

// Process the markdown content
const processedContent = content ? processContent(content) : '';
---

<div class="changelog-entry-full">
  <a href="/workflow/changelog" class="back-link">‚Üê Back to Changelog</a>
  <article>
    <header>
      <div class="meta">
        {formattedDate && (
          <time datetime={formattedDate}>{formattedDate}</time>
        )}
        {category && (
          <span class="category">{category}</span>
        )}
      </div>
      {contextSetter && (
        <h1 class="emphasis">{processInlineContent(contextSetter)}</h1>
      )}
      {title && (
        <h1 class="title">{processInlineContent(title)}</h1>
      )}
    </header>
    <div class="content">
      <MarkdownContent content={processedContent} />
    </div>
  </article>
</div>

<style>
  .changelog-entry-full {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--clr-lossless-link);
    text-decoration: none;
  }

  .meta {
    margin-bottom: 1rem;
    color: var(--clr-lossless-primary-dark);
  }

  .category {
    margin-left: 1rem;
    padding: 0.25rem 0.5rem;
    background: var(--clr-lossless-primary-glass);
    border-radius: 4px;
  }

  .emphasis {
    font-size: 1.5rem;
    color: var(--clr-lossless-accent--brightest);
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .content {
    line-height: 1.6;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3) {
    margin: 2rem 0 1rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }
</style>