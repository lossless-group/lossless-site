  .tool-card {
    padding: 0.1em;
  }
  
  .tool-card .content-wrapper {
    padding: 0.4em;
  }
  
  .tool-card-image img {
    height: 160px;
  }
  
  .tool-card h2 {
    font-size: var(--fs-400);
  }
  
  .tool-card h4 {
    font-size: var(--fs-300);
  }
  
  .tool-description {
    font-size: var(--fs-250);
  }
}

