  }
  
  .collection-reader-layout:has(.collection-sidebar:hover) .tool-card h4 {
    font-size: var(--fs-300);
  }
  
  .collection-reader-layout:has(.collection-sidebar:hover) .tool-description {
    font-size: var(--fs-250);
  }
}

