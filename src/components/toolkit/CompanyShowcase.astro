---
/**
 * CompanyShowcase.astro
 * Displays company branding with banner image and favicon/logo
 * Shows company name prominently with visual hierarchy
 */

interface Props {
  title: string;
  og_image?: string;
  image?: string;
  og_screenshot?: string;
  og_screenshot_url?: string;
  og_favicon?: string;
  favicon?: string;
  og_title?: string;
  url?: string;
}

const { 
  title, 
  og_image, 
  image, 
  og_screenshot, 
  og_screenshot_url,
  og_favicon, 
  favicon,
  og_title,
  url 
} = Astro.props;

// Determine the best banner image to use (priority order)
const bannerImage = og_image || image || og_screenshot || og_screenshot_url;

// Determine the best icon to use
const companyIcon = og_favicon || favicon;

// Use og_title if available, otherwise use the title
const displayTitle = og_title || title;
---

<div class="company-showcase">
  {bannerImage && (
    <div class="banner-container">
      <img 
        src={bannerImage} 
        alt={`${displayTitle} banner`}
        class="banner-image"
        loading="eager"
      />
      <div class="banner-overlay"></div>
    </div>
  )}
  
  <div class="company-header">
    <div class="company-info">
      {companyIcon && (
        <div class="company-icon">
          <img 
            src={companyIcon} 
            alt={`${displayTitle} logo`}
            class="icon-image"
            loading="eager"
          />
        </div>
      )}
      
      <div class="company-details">
        <h1 class="company-name">{displayTitle}</h1>
        {url && (
          <a href={url} target="_blank" rel="noopener noreferrer" class="company-url">
            {url.replace(/^https?:\/\//, '').replace(/\/$/, '')}
          </a>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  /* ===== Company Showcase Styles (matching InfoSidebar/TableOfContents) ===== */
  
  .company-showcase {
    position: relative;
    width: 100%;
    margin-bottom: 2rem;
    border-radius: 0 0 12px 12px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .company-showcase:hover {
    border-color: var(--clr-lossless-accent--brightest);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .banner-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .banner-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 70%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  .company-header {
    position: relative;
    background: rgba(255, 255, 255, 0.05);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem;
    z-index: 2;
  }

  /* If there's a banner, position the header to overlap slightly */
  .banner-container + .company-header {
    margin-top: -30px;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(15px);
    border-top: none;
    border-radius: 0 0 12px 12px;
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .company-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .company-icon:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: var(--clr-lossless-accent--brightest);
    transform: translateY(-2px);
  }

  .icon-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .company-details {
    flex: 1;
    min-width: 0; /* Allows text to truncate if needed */
  }

  .company-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.25rem 0;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .company-url {
    color: var(--clr-lossless-primary-light);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.8;
    transition: all 0.2s ease;
  }

  .company-url:hover {
    color: var(--clr-lossless-accent--brightest);
    opacity: 1;
    text-decoration: underline;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .company-header {
      padding: 0.75rem;
    }

    .company-icon {
      width: 32px;
      height: 32px;
    }

    .company-name {
      font-size: 1.1rem;
    }

    .company-url {
      font-size: 0.9rem;
    }

    .company-info {
      gap: 0.5rem;
    }
  }

  /* Handle cases where there's no banner */
  .company-showcase:not(:has(.banner-container)) .company-header {
    background: rgba(255, 255, 255, 0.05);
    border: none;
    margin-top: 0;
    border-radius: 0 0 12px 12px;
  }

  /* Focus styles for accessibility */
  .company-url:focus {
    outline: 2px solid var(--clr-lossless-accent--brightest);
    outline-offset: 2px;
  }
</style>