---
/**
 * ToolShowcaseItem--Wide-Responsive.astro
 * Responsive tool showcase component for embedding in markdown
 * Uses clamp() for responsive sizing and optional carousel controls
 */

interface Props {
  title: string;
  og_image?: string;
  image?: string;
  og_screenshot?: string;
  og_screenshot_url?: string;
  og_favicon?: string;
  favicon?: string;
  og_title?: string;
  url?: string;
  og_description?: string;
  description_site_cp?: string;
  inCarousel?: boolean;
}

const { 
  title, 
  og_image, 
  image, 
  og_screenshot, 
  og_screenshot_url,
  og_favicon, 
  favicon,
  og_title,
  url,
  og_description,
  description_site_cp,
  inCarousel = false
} = Astro.props;

// Determine the best banner image to use (priority order)
const bannerImage = og_image || image || og_screenshot || og_screenshot_url;

// Determine the best icon to use
const companyIcon = og_favicon || favicon;

// Use og_title if available, otherwise use the title
const displayTitle = og_title || title;

// Determine the best description to use (priority order)
const companyDescription = og_description || description_site_cp;
---

<div class="tool-showcase-wide">
  {bannerImage && (
    <div class="banner-container">
      <img 
        src={bannerImage} 
        alt={`${displayTitle} banner`}
        class="banner-image"
        loading="lazy"
      />
      <div class="banner-overlay"></div>
    </div>
  )}
  
  <div class="company-header">
    {inCarousel && (
      <button class="carousel-chevron carousel-left" aria-label="Previous item">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
    )}
    
    <div class="company-info">
      {companyIcon && (
        <div class="company-icon">
          <img 
            src={companyIcon} 
            alt={`${displayTitle} logo`}
            class="icon-image"
            loading="lazy"
          />
        </div>
      )}
      
      <div class="company-details">
        <div class="company-left">
          <h3 class="company-name">{displayTitle}</h3>
          {url && (
            <a href={url} target="_blank" rel="noopener noreferrer" class="company-url">
              {url.replace(/^https?:\/\//, '').replace(/\/$/, '')}
            </a>
          )}
        </div>
        {companyDescription && (
          <div class="company-right">
            <p class="company-description">{companyDescription}</p>
          </div>
        )}
      </div>
    </div>
    
    {inCarousel && (
      <button class="carousel-chevron carousel-right" aria-label="Next item">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    )}
  </div>
</div>

<style>
  /* ===== Tool Showcase Wide Responsive Styles ===== */
  
  .tool-showcase-wide {
    position: relative;
    width: 100%;
    margin: clamp(1rem, 2vw, 2rem) 0;
    border-radius: clamp(8px, 1vw, 12px);
    overflow: hidden;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .tool-showcase-wide:hover {
    border-color: var(--clr-lossless-accent--brightest);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .banner-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: clamp(8px, 1vw, 12px) clamp(8px, 1vw, 12px) 0 0;
  }

  .banner-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 70%,
      rgba(0, 0, 0, 0.6) 100%
    );
  }

  .company-header {
    position: relative;
    background: rgba(255, 255, 255, 0.05);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: clamp(0.75rem, 1.5vw, 1rem);
    z-index: 2;
    display: flex;
    align-items: center;
    gap: clamp(0.5rem, 1vw, 1rem);
  }

  /* If there's a banner, position the header to overlap slightly */
  .banner-container + .company-header {
    margin-top: clamp(-20px, -2vw, -30px);
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(15px);
    border-top: none;
    border-radius: 0 0 clamp(8px, 1vw, 12px) clamp(8px, 1vw, 12px);
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: clamp(0.5rem, 1vw, 0.75rem);
    flex: 1;
  }

  .company-icon {
    flex-shrink: 0;
    width: clamp(32px, 4vw, 40px);
    height: clamp(32px, 4vw, 40px);
    border-radius: clamp(6px, 0.75vw, 8px);
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .company-icon:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: var(--clr-lossless-accent--brightest);
    transform: translateY(-2px);
  }

  .icon-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .company-details {
    flex: 1;
    min-width: 0;
    display: flex;
    gap: clamp(1.5rem, 3vw, 3rem);
    align-items: flex-start;
  }

  .company-left {
    flex: 0 0 auto;
    min-width: 0;
  }

  .company-right {
    flex: 1;
    min-width: 0;
    max-width: clamp(40%, 45vw, 45%);
  }

  .company-name {
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 600;
    color: white;
    margin: 0 0 clamp(0.125rem, 0.5vw, 0.25rem) 0;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .company-url {
    color: var(--clr-lossless-primary-light);
    text-decoration: none;
    font-size: clamp(0.85rem, 1.5vw, 1rem);
    font-weight: 500;
    opacity: 0.8;
    transition: all 0.2s ease;
  }

  .company-url:hover {
    color: var(--clr-lossless-accent--brightest);
    opacity: 1;
    text-decoration: underline;
  }

  .company-description {
    font-size: clamp(0.8rem, 1.25vw, 0.9rem);
    color: var(--clr-lossless-primary-light);
    opacity: 0.9;
    line-height: 1.4;
    margin: 0;
    max-width: none;
  }

  /* Carousel chevrons */
  .carousel-chevron {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    width: clamp(32px, 3vw, 40px);
    height: clamp(32px, 3vw, 40px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--clr-lossless-primary-light);
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .carousel-chevron:hover {
    background: rgba(0, 0, 0, 0.8);
    border-color: var(--clr-lossless-accent--brightest);
    color: var(--clr-lossless-accent--brightest);
    transform: scale(1.1);
  }

  .carousel-chevron:active {
    transform: scale(0.95);
  }

  /* Handle cases where there's no banner */
  .tool-showcase-wide:not(:has(.banner-container)) .company-header {
    background: rgba(255, 255, 255, 0.05);
    border: none;
    margin-top: 0;
    border-radius: 0 0 clamp(8px, 1vw, 12px) clamp(8px, 1vw, 12px);
  }

  /* Mobile stacking for very small screens */
  @media (max-width: 480px) {
    .company-details {
      flex-direction: column;
      gap: clamp(0.5rem, 1vw, 0.75rem);
    }

    .company-right {
      max-width: none;
    }

    .carousel-chevron {
      display: none; /* Hide chevrons on very small screens */
    }
  }

  /* Focus styles for accessibility */
  .company-url:focus,
  .carousel-chevron:focus {
    outline: 2px solid var(--clr-lossless-accent--brightest);
    outline-offset: 2px;
  }
</style>