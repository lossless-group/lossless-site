---
interface Props {
  title?: string;
  content: string;
  className?: string;
  [key: string]: any;
}

const { title, content, className = 'callout callout-note', ...attrs } = Astro.props;
---

<div class={className} {...attrs}>
  {title && (
    <div class="callout-title">
      <span class="callout-icon">üìù</span>
      <span class="callout-title-text">{title}</span>
    </div>
  )}
  <div class="callout-content">
    <Fragment set:html={content} />
  </div>
</div>

<style>
.callout-note {
  border: 2px solid rgba(107, 114, 128, 0.4);
  border-left: 6px solid #6b7280;
  border-radius: 0.75rem;
  padding: 1.25rem;
  margin: 1.5rem 0;
  background: linear-gradient(135deg, 
    rgba(107, 114, 128, 0.08) 0%, 
    rgba(107, 114, 128, 0.04) 100%);
  box-shadow: 0 4px 6px -1px rgba(107, 114, 128, 0.1);
}

.callout-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 0.75rem;
  font-weight: 700;
  color: #4b5563;
  font-size: 1.1rem;
}

.callout-icon {
  font-size: 1.5rem;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
}

.callout-title-text {
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.callout-content {
  margin-top: 0.75rem;
  line-height: 1.7;
  color: #374151;
  font-weight: 500;
}

.callout-content p {
  margin: 0.5rem 0;
}

.callout-content p:first-child {
  margin-top: 0;
}

.callout-content p:last-child {
  margin-bottom: 0;
}

/* Enhanced styling for links within notes */
.callout-content a {
  color: #4b5563;
  text-decoration: underline;
  text-decoration-color: rgba(75, 85, 99, 0.4);
  transition: all 0.2s ease;
}

.callout-content a:hover {
  color: #1f2937;
  text-decoration-color: #1f2937;
}

/* Dark mode adjustments */
@media (prefers-color-scheme: dark) {
  .callout-note {
    background: linear-gradient(135deg, 
      rgba(107, 114, 128, 0.12) 0%, 
      rgba(107, 114, 128, 0.06) 100%);
    border-color: rgba(107, 114, 128, 0.5);
  }
  
  .callout-title {
    color: #9ca3af;
  }
  
  .callout-content {
    color: #d1d5db;
  }
  
  .callout-content a {
    color: #9ca3af;
  }
  
  .callout-content a:hover {
    color: #f3f4f6;
  }
}
</style>
