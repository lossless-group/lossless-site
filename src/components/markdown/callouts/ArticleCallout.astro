  'information': { icon: '‚ÑπÔ∏è', title: 'Information', color: '#60a5fa', bgColor: 'rgba(59, 130, 246, 0.08)', borderColor: 'rgba(59, 130, 246, 0.3)', hasStyledComponent: true },
