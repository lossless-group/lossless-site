---
import TextCTA from "@basics/cta/TextCTA.astro";
import IconHeaderMessageOvalProcess from "./IconHeaderMessageOvalProcess.astro";
---

  <!-- Inline, page-specific Hero for /vibe-with/us.astro -->
  <section class="hero vibe-hero--local">
   <div class="hero-content">
     <div class="hero-text">
       <p class="hero-subtitle">Our Systems have come a long way.</p>
       <h1 class="hero-title">Vibe Code with Us</h1>
       <p class="hero-description">
         We've been down the rabbit holes, shaved our yaks, and present our tender, love, care, and the results of untold frustration for you here.
       </p>
       <TextCTA
         text="Get Started"
         path="/vibe-with/us"
       />
     </div>
   </div>
   <section class="vibe-with-us-section" style="--vibe-section-top-margin: 2.5rem;">
      <div class="vibe-container">
         <IconHeaderMessageOvalProcess 
            jsonPath="messages/vibeCodingIconHeaderMessages.json"
            style="margin: 0 auto;"
         />
      </div>
   </section>

</section>


<style>
   .vibe-with-us-section {
      padding: 3rem 1.5rem;
      width: 100%;
      background: var(--clr-bg-secondary, #1a1e26);
      margin-top: var(--vibe-section-top-margin, 2.5rem);
   }
   
   .vibe-container {
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
   }
   
   /* Page-local Hero styles for /vibe-with/us.astro */
   .hero.vibe-hero--local {
     margin-bottom: 0;
     margin-top: 1.5rem;
     padding: 2.5rem 1.5rem;
     border-radius: 1rem;
     box-shadow: 0 4px 24px rgba(0,0,0,0.1);
   }
   .hero.vibe-hero--local .hero-content {
     display: flex;
     flex-direction: column;
     align-items: center;
     gap: 1.5rem;
     max-width: 900px;
     margin: 0 auto 3rem auto;
   }
   .hero.vibe-hero--local .hero-text {
     text-align: center;
   }
   .hero.vibe-hero--local .hero-subtitle {
     font-family: var(--ff-legible);
     font-weight: var(--fw-semi-bold);
     font-size: var(--fs-400);
     color: var(--clr-lossless-accent--brightest);
     margin-bottom: 0.5rem;
     letter-spacing: 0.5px;
   }
   .hero.vibe-hero--local .hero-title {
     font-family: var(--ff-base);
     font-weight: var(--fw-bold);
     font-size: var(--fs-900);
     line-height: 1.2;
     margin-bottom: 1rem;
     background: linear-gradient(90deg, var(--clr-lossless-primary-light) 0%, var(--clr-lossless-accent--brightest) 100%);
     -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
     background-clip: text;
     text-fill-color: transparent;
   }
   .hero.vibe-hero--local .hero-description {
     font-family: var(--ff-legible);
     font-weight: var(--fw-regular);
     font-size: var(--fs-450);
     line-height: 1.6;
     opacity: 0.9;
     max-width: 60ch;
     margin-bottom: 1.5rem;
     margin-left: auto;
     margin-right: auto;
   }
   </style>