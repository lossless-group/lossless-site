---
/**
 * ClientCard--sm.astro
 * 
 * Small client card component for horizontal scrolling lists
 * Displays client information in a compact, visually appealing card
 * 
 * PROPS:
 * - name (string, required): Client company name
 * - logo (string, optional): Path to client logo image
 * - description (string, required): Brief description of engagement
 * - industry (string, required): Client's industry sector
 * - engagement (string, required): Engagement period (e.g., "2023-Present")
 * - website (string, optional): Client website URL
 */

import TextCTA from '../cta/TextCTA.astro';

interface Props {
  name: string;
  logo?: string;
  description: string;
  industry: string;
  engagement: string;
  website?: string;
}

const { name, logo, description, industry, engagement, website } = Astro.props;
---

<div class="client-card--sm">
  <div class="client-header">
    {logo && (
      <div class="client-logo">
        <img src={logo} alt={`${name} logo`} />
      </div>
    )}
    <div class="client-info">
      <h3 class="client-name">{name}</h3>
      <div class="client-meta">
        <span class="client-industry">{industry}</span>
        <span class="client-engagement">{engagement}</span>
      </div>
    </div>
  </div>
  
  <p class="client-description">{description}</p>
  
  {website && (
    <TextCTA href={website} text="Visit Website" />
  )}
</div>

<style>
  .client-card--sm {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 1rem;
    padding: 1.5rem;
    min-width: 320px;
    max-width: 400px;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border: 1.5px solid rgba(255, 255, 255, 0.06);
    transition: all 0.3s ease;
  }
  
  :global(.dark) .client-card--sm {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .client-card--sm:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.28);
    border-image: var(--grd--lossless-eastern-crimson, linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%)) 1;
    border-width: 2.5px;
    border-style: solid;
  }
  
  .client-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .client-logo {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .client-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .client-info {
    flex: 1;
  }
  
  .client-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }
  
  .client-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
  }
  
  .client-industry {
    background: linear-gradient(90deg, #F59C49 0%, #FDE047 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 500;
    letter-spacing: 0.5px;
  }
  
  .client-engagement {
    color: #94a3b8;
  }
  
  .client-description {
    color: #cbd5e1;
    line-height: 1.6;
    flex: 1;
    margin: 0;
  }
  
</style>