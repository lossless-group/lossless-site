---
/**
 * GuideCard--sm.astro
 * 
 * Small guide card component for up-and-running collection
 * Displays guide information in a compact, visually appealing card without requiring images
 * Based on ClientCard--sm.astro design pattern
 * 
 * PROPS:
 * - title (string, required): Guide title
 * - description (string, optional): Brief description of the guide
 * - date (string, optional): Publication date
 * - tags (string[], optional): Guide tags
 * - slug (string, required): Guide slug for linking
 * - collection (string, optional): Collection name for URL building
 */

import TextCTA from '../cta/TextCTA.astro';
import { formatDate } from "@utils/formatDate";

interface Props {
  title: string;
  description?: string;
  date?: string | Date;
  tags?: string[];
  slug: string;
  collection?: string;
}

const { title, description, date, tags = [], slug, collection = 'up-and-running' } = Astro.props;

// Build the URL for the guide
const href = slug.startsWith('/') ? slug : `/${slug}`;

// Format the date consistently if it exists
let displayDate = "";
if (date) {
  try {
    const dateObj = typeof date === 'string' ? new Date(date) : date;
    displayDate = formatDate(dateObj);
  } catch (error) {
    displayDate = typeof date === 'string' ? date : '';
  }
}

// Take first 2 tags for display
const displayTags = tags.slice(0, 2);
---

<div class="guide-card--sm">
  <div class="guide-header">
    <div class="guide-icon">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14,2 14,8 20,8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
        <polyline points="10,9 9,9 8,9"></polyline>
      </svg>
    </div>
    <div class="guide-info">
      <h3 class="guide-title">{title}</h3>
      <div class="guide-meta">
        {displayTags.length > 0 && (
          <span class="guide-tags">{displayTags.join(', ')}</span>
        )}
        {displayDate && (
          <span class="guide-date">{displayDate}</span>
        )}
      </div>
    </div>
  </div>
  
  {description && (
    <p class="guide-description">{description}</p>
  )}
  
  <TextCTA href={href} text="Read Guide" />
</div>

<style>
  .guide-card--sm {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 1rem;
    padding: 1.5rem;
    min-width: 320px;
    max-width: 400px;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border: 1.5px solid rgba(255, 255, 255, 0.06);
    transition: all 0.3s ease;
  }
  
  :global(.dark) .guide-card--sm {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .guide-card--sm:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.28);
    border-image: var(--grd--lossless-eastern-crimson, linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%)) 1;
    border-width: 2.5px;
    border-style: solid;
    transform: translateY(-2px);
  }
  
  .guide-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .guide-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(79, 172, 254, 0.2) 0%, rgba(0, 242, 195, 0.2) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: #4facfe;
  }
  
  .guide-info {
    flex: 1;
  }
  
  .guide-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }
  
  .guide-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.875rem;
  }
  
  .guide-tags {
    background: linear-gradient(90deg, #4facfe 0%, #00f2c3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 500;
    letter-spacing: 0.5px;
  }
  
  .guide-date {
    color: #94a3b8;
  }
  
  .guide-description {
    color: #cbd5e1;
    line-height: 1.6;
    flex: 1;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .guide-card--sm {
      min-width: 280px;
      max-width: 100%;
    }
    
    .guide-meta {
      gap: 0.5rem;
    }
  }
</style>