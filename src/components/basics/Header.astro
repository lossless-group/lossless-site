---
import "@styles/global.css";
import ThinGradientBleedSeparator from "@basics/separators/ThinGradientBleedSeparator.astro";
---

<header class="header">
  <div class="header-container-row">
    <a href="/" aria-label="Return to homepage">
      <img
        class="logo-box"
        src="/visuals/trademark__Lossless.svg"
        alt="The Lossless Group logo indicates that what we do soon 
        has dramatic impacts on potential performance later."
      />
    </a>
    <span class="connect-with-us-icons">
      <a href="/about/">About</a>
      <a href="/read/through">Reader</a>
      <a href="/toolkit">Toolkit</a>
      <a href="/more-about">Reference</a>
      <a href="/workflow/changelog">Changelog</a>
      <img src="/visuals/appIcon__Discord.svg" alt="" />
      <img src="/visuals/appIcon__X-Twitter.svg" alt="" />
      <img src="/visuals/appIcon__GitHub--Lighter.svg" alt="" />
      <img src="/visuals/appIcon__LinkedIn.svg" alt="" />
    </span>
  </div>
  <div class="header-separator">
    <!-- Use enhanced separator with specific styling for the header -->
    <ThinGradientBleedSeparator
      height="2px"
      color="var(--grd__primary-bg)"
    />
  </div>
</header>

<style>
  .header {
    position: fixed;
    background-color: var(--clr-primary-bg);
    width: 100%;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
  }
  .logo-box {
    width: auto;
    height: clamp(34px, 8vw, 100px);
    max-height: 4vh;
  }

  /* Style for the logo link to ensure it doesn't affect layout */
  .header-container-row > a {
    display: flex;
    text-decoration: none;
    padding: 0;
    margin: 0;
  }

  .header-container-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 1.25em 3em 1.25em;
    /* max-height: 6vh; */
  }

  /* Add spacing for the separator */
  .header-separator {
    margin-top: 0;
    margin-bottom: 0;
    /* padding-bottom: 1.25em; */
  }

  .connect-with-us-icons {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 2vw;

    & img {
      width: clamp(14px, 3vw, 32px);
      height: clamp(14px, 3vw, 32px);
      object-fit: contain;
      aspect-ratio: 1 / 1;
    }
    & a {
      text-decoration: none;
      color: var(--clr-lossless-primary-light);
      font-size: 1em;

      &:hover,
      &:focus-visible {
        color: var(--clr-link);
      }
    }
  }
</style>
