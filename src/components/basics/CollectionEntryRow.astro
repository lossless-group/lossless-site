---
/**
 * CollectionEntryRow.astro
 * Base component for rendering a single row in a collection list
 * 
 * @component
 * @example
 * ```astro
 * <CollectionEntryRow>
 *   <h2>Entry Title</h2>
 *   <p>Entry content...</p>
 * </CollectionEntryRow>
 * ```
 */

interface Props {
  /**
   * Optional CSS classes to apply to the row
   */
  class?: string;
  
  /**
   * Optional highlight state for the row
   */
  isHighlighted?: boolean;
}

const { class: className, isHighlighted = false } = Astro.props;
---

<div class:list={["collection-entry-row card-hover-effect", className, { highlighted: isHighlighted }]}>
  <slot />
</div>

<style>
  .collection-entry-row {
    /* Structure */
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    padding: 1.5rem;
    margin-bottom: 0.5rem;
    border-radius: 0.5rem;
  }

</style>