---
/**
 * CollectionEntryRow.astro
 * Base component for rendering a single row in a collection list
 * 
 * @component
 * @example
 * ```astro
 * <CollectionEntryRow>
 *   <h2>Entry Title</h2>
 *   <p>Entry content...</p>
 * </CollectionEntryRow>
 * ```
 */

interface Props {
  /**
   * Optional CSS classes to apply to the row
   */
  class?: string;
  
  /**
   * Optional highlight state for the row
   */
  isHighlighted?: boolean;
}

const { class: className, isHighlighted = false } = Astro.props;
---

<div class:list={["collection-entry-row", className, { highlighted: isHighlighted }]}>
  <slot />
</div>

